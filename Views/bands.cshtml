<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- styles -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="Content/css/styles.css" rel="stylesheet" type="text/css">
    <title>bandtracker</title>
  </head>
  <body>
    <div class="container jumbotron">
      @if (@Model.Count == 0)
      {
        <p>No bands have ever played in Seattle that we know of!</p>
      }
      else
      {
        <h2>Bands which have played Seattle:</h2>
        <ul>
          @foreach (var band in Model)
          {
            <li><h3><a href="/bands/@band.GetId()">@band.GetName()</a><h3></li>
          }
        </ul>
      }
      <hr />
      <h4><a href="/bands/new">Add a New Band</a></h4>
      <h4><a href="/">Return Home</a></h4>
    </div>
  </body>
</html>
