<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- styles -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
    <title>bandtracker</title>
  </head>
  <body>
    <div class="container jumbotron">
      <h1>Edit @Model.GetName()</h1>
      <hr />
      <form action="/venue/edit/@Model.GetId()" method="post">
        <input type="hidden" name="_method" value="PATCH">
        <input name="venue-id" type="hidden" value="@Model.GetId()">
        <label for="venue-name">New Venue Name</label>
        <input id="venue-name" name="venue-name" type="text">
        <button type="submit">Submit</button>
      </form>
    </div>
    <div class="container jumbotron">
      <h4><a href="/">Return home</a></h4>
    </div>
  </body>
</html>
